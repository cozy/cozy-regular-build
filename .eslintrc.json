{
  "extends": "airbnb",
  "strict": "global",
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
   },
  "rules": {
    "no-param-reassign": [0, {"props": false}],
    "strict": 0,
    "no-shadow": 0,
    "no-use-before-define": 0,
    "import/no-unresolved": 0,
    "no-underscore-dangle": 0,
    "max-len": [1, 80, 2, {"ignoreUrls": true}],

    "no-var": 0,
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "prefer-rest-params": 0,
    "object-shorthand": 0,
    "prefer-template": 0,
    "indent": ["error", 4]
  }
}
